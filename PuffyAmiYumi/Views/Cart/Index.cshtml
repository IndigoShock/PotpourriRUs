@model PuffyAmiYumi.Models.Cart

@{
    Layout = "_Layout";
}

<h2>My Shopping Cart</h2>
<table id="cartTable">
    <tr>
        <th>Image</th>
        <th>Quantity</th>
        <th>Item Name</th>
        <th>Price</th>
        <th>Cost</th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                <img class="productIMG" src="~/@item.ProductIMG" />
            </td>
            <td>@item.Quantity</td>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>
                <a class="products" asp-controller="Cart" asp-action="Delete">Remove From Cart</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-group" asp-controller="Checkout" asp-action="Checkout">Proceed To Checkout</a>
